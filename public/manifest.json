{
	"manifest_version": 3,
	"name": "Hookwell",
	"version": "0.1",
	"description": "Save ads",
	"icons": {
		"128": "icons/hook-128.png"
	},
	"content_scripts": [
		{
			"js": ["scripts/content.js"],
			"matches": ["https://www.facebook.com/*"]
		}
	],
	"action": {
		"default_popup": "index.html",
		"default_icon": "icons/hook-128.png"
	},
	"background": {
		"service_worker": "scripts/background.js"
	},
	"permissions": ["activeTab", "tabs"]
}
